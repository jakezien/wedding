@import './variables.styl'

section
  margin-bottom 2rem
  
.interstitial
  width 186px
  display block
  margin 6rem auto 2rem auto
  &.wide
    width 266px
  
ul li
  list-style none
  position relative
  &:before
    content ''
    width .375em
    height .375em
    background annaRed
    transform rotate(45deg)
    position absolute
    top .55em
    left -1.2em

.center
  text-align center