.container
  position relative
  height 600px
  overflow hidden
  background #023370
  display flex
  
  img
    margin 0
    position relative
    animation spin 136s linear infinite
       
.imgWrap
  position relative
  align-self flex-end
  top 65vw
  // transform translateY(65%) scale(3)
  
.zoetrope
  width 120vw
  height 120vw
  background url('../images/zoetrope.png')
  background-size 100%
  background-position center
  position relative
  left -10vw
  animation spin 136s linear infinite

