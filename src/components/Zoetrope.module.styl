@import './variables.styl'

.container
  position relative
  min-height 600px
  height 70vh
  width 100%
  overflow hidden
  // background #023370

.divider
  width 100%
  height 40px
  margin-bottom 200px
  background url('../images/divider-yellow.png')
  background-size auto 100%
  position relative

.sticker
  position absolute
  width 310px
  height 310px
  left 50% 
  top 50%
  transform translate(-50%, -45%)
  background annaRed
  border 2px solid black
  border-radius 50%
       
.imgWrap
  position absolute
  width 500vw
  height 500vw
  top 105%
  left 50%
  transform translate(-50%, -50%)
  animation spin 170s linear infinite
  div
    position absolute
    width 100%
    height 100%
    background-position center center
    
.stars
  background url('../images/stars.gif')
  background-repeat repeat-x repeat-y
  background-size auto 6vh
  
.zoetrope
  background url('../images/zoetrope.png')
  background-repeat no-repeat
  background-size 120vh

@media only screen and (min-width: 768px)
  .stars
    background-size auto 6vh

  .zoetrope
    background-size 130vh


@keyframes spin
  0%
    transform translate(-50%, -50%) rotate(360deg)
  100%
    transform translate(-50%, -50%) rotate(0deg)
